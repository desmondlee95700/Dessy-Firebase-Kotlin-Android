<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication3.edit.EditFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/editVolumetric"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="VOLUMETRIC INFO"
            android:textSize="15sp"
            android:textAppearance="@style/successful"
            android:gravity="center_horizontal|center_vertical"
            />

        <TextView
            android:id="@+id/displayEditVolumetric"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/displayEditCost"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/editInfo"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:text="YOUR POSTAGE INFO DETAILS"
            android:textSize="15sp"
            android:textAppearance="@style/successful"
            android:gravity="center_horizontal|center_vertical"
            />

        <TextView
            android:id="@+id/editInfoName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />
        <TextView
            android:id="@+id/editInfoPhone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />
        <TextView
            android:id="@+id/editInfoStreet"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />
        <TextView
            android:id="@+id/editInfoCity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="350dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />
        <TextView
            android:id="@+id/editInfoState"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="400dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />
        <TextView
            android:id="@+id/editInfoPostcode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="450dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />
        <TextView
            android:id="@+id/editInfoTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="550dp"
            android:textSize="15sp"
            android:background="@drawable/volumetric"
            android:textAppearance="@style/volumetric"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/editInfoDate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp"
            android:background="@drawable/volumetric"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/volumetric"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/editService"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="600dp"
            android:text="POSTAGE SERVICE INFO"
            android:textSize="15sp"
            android:textAppearance="@style/successful"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/editInfoService"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="650dp"
            android:background="@drawable/volumetric"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/volumetric"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/editInfoReference"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="700dp"
            android:background="@drawable/volumetric"
            android:gravity="center_horizontal|center_vertical"
            android:textAppearance="@style/volumetric"
            android:textSize="15sp" />

        <TextView

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="750dp" />

    </RelativeLayout>
</ScrollView>